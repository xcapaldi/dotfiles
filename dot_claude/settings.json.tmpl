{
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "1"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      {{- if eq .chezmoi.os "darwin" }}
      "Bash(GOOGLE_CLOUD_PROJECT=\"optable-platform-dev\" GOOGLE_CLOUD_REGION=\"northamerica-northeast1\" go test:*)",
      {{- end }}
      "Bash(gh pr diff:*)",
      "Bash(gh pr view:*)",
      "Bash(gh search code:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(go build:*)",
      "Bash(go doc:*)",
      "Bash(go mod tidy)",
      "Bash(go test:*)",
      "Bash(go tool pprof:*)",
      "Bash(go vet:*)",
      "Bash(gofmt:*)",
      "Bash(golangci-lint:*)",
      "Bash(grep:*)",
      "Bash(kubectl get pods:*)",
      "Bash(kubectl logs:*)",
      "Bash(ls:*)",
      "WebFetch(domain:docs.cloud.google.com)",
      "WebFetch(domain:docs.sentry.io)",
      "WebFetch(domain:github.com)",
      "WebSearch"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\a' > /dev/tty"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\a' > /dev/tty"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\a' > /dev/tty"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    {{- if eq .chezmoi.os "darwin" }}
    "typescript-lsp@claude-plugins-official": true,
    {{- end }}
    "gopls-lsp@claude-plugins-official": true
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.py",
    "padding": 0
  },
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": true
  },
  "alwaysThinkingEnabled": true,
  "autoUpdates": false
}
