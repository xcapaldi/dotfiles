{
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "1"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "mcp__gopls",
      "Bash(ls:*)",
      "Bash(go build:*)",
      "Bash(gofmt:*)",
      "Bash(go test:*)",
      "Bash(GOOGLE_CLOUD_PROJECT=\"optable-platform-dev\" GOOGLE_CLOUD_REGION=\"northamerica-northeast1\" go test:*)",
      "Bash(go mod tidy)",
      "Bash(go tool pprof:*)",
      "Bash(go vet:*)",
      "Bash(grep:*)",
      "Bash(golangci-lint:*)",
      "Bash(git show:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(kubectl logs:*)",
      "Bash(kubectl get pods:*)",
      "Bash(go doc:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.cloud.google.com)",
      "WebFetch(domain:docs.sentry.io)",
      "WebSearch"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\a' > /dev/tty"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\a' > /dev/tty"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.py",
    "padding": 0
  },
  "enabledPlugins": {},
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": true
  },
  "alwaysThinkingEnabled": true,
  "autoUpdates": false
}
