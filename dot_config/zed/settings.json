{
  "agent_ui_font_size": 15,
  "agent_buffer_font_size": 12,
  "auto_install_extensions": {
    "alabaster": true,
  },
  // use ".ZedMono" for the bundled default monospace (currently Lilex)
  "buffer_font_family": "Maple Mono",
  "buffer_font_size": 14,
  "buffer_font_weight": 400,
  "buffer_line_height": "comfortable",
  "disable_ai": false,
  "git": {
    "hunk_style": "staged_hollow",
    "inline_blame": {
      "delay_ms": 0,
      "enabled": true,
      "min_column": 0,
      "padding": 7,
      "show_commit_summary": true,
    },
  },
  "max_tabs": null,
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "show_close_button": "hover",
    "show_diagnostics": "all",
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": true,
  },
  "theme": {
    "dark": "Alabaster Dark",
    "light": "Alabaster BG",
    "mode": "system",
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "terminal": {
    "font_family": "Maple Mono",
    "font_size": 15,
    "line_height": "standard",
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_menus": true,
    "show_onboarding_banner": false,
    "show_project_items": true,
    "show_sign_in": false,
    "show_user_picture": true,
  },
  // UI Font. Use ".SystemUIFont" to use the default system font (SF Pro on macOS),
  // or ".ZedSans" for the bundled default (currently IBM Plex)
  "ui_font_family": "Maple Mono",
  "ui_font_weight": 400,
  "ui_font_size": 14,
}

